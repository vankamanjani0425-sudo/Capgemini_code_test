{
  "openapi": "3.0.1",
  "info": {
    "title": "PremiumCalculator",
    "version": "1.0"
  },
  "paths": {
    "/api/Premium/calculate": {
      "post": {
        "tags": [
          "Premium"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PremiumRequest"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/PremiumRequest"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/PremiumRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/PremiumResponse"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PremiumResponse"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/PremiumResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/Premium/occupations": {
      "get": {
        "tags": [
          "Premium"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Occupation"
                  }
                }
              },
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Occupation"
                  }
                }
              },
              "text/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Occupation"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/WeatherForecast": {
      "get": {
        "tags": [
          "WeatherForecast"
        ],
        "operationId": "GetWeatherForecast",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/WeatherForecast"
                  }
                }
              },
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/WeatherForecast"
                  }
                }
              },
              "text/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/WeatherForecast"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Occupation": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "nullable": true
          },
          "rating": {
            "type": "string",
            "nullable": true
          },
          "factor": {
            "type": "number",
            "format": "double"
          }
        },
        "additionalProperties": false
      },
      "PremiumRequest": {
        "required": [
          "ageNextBirthday",
          "dateOfBirth",
          "deathSumInsured",
          "name",
          "occupation"
        ],
        "type": "object",
        "properties": {
          "name": {
            "maxLength": 100,
            "minLength": 0,
            "type": "string"
          },
          "ageNextBirthday": {
            "maximum": 100,
            "minimum": 18,
            "type": "integer",
            "format": "int32"
          },
          "dateOfBirth": {
            "minLength": 1,
            "pattern": "^(0[1-9]|1[0-2])\\/\\d{4}$",
            "type": "string"
          },
          "occupation": {
            "minLength": 1,
            "type": "string"
          },
          "deathSumInsured": {
            "maximum": 10000000,
            "minimum": 1000,
            "type": "number",
            "format": "double"
          }
        },
        "additionalProperties": false
      },
      "PremiumResponse": {
        "type": "object",
        "properties": {
          "monthlyPremium": {
            "type": "number",
            "format": "double"
          },
          "calculationDetails": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "WeatherForecast": {
        "type": "object",
        "properties": {
          "date": {
            "type": "string",
            "format": "date"
          },
          "temperatureC": {
            "type": "integer",
            "format": "int32"
          },
          "temperatureF": {
            "type": "integer",
            "format": "int32",
            "readOnly": true
          },
          "summary": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    }
  }
}